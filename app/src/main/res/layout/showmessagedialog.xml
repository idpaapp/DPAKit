<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transBackColor">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/colorBackground"
        app:cardCornerRadius="8sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5sp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/md_txt_message"
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="5sp"
                    android:paddingTop="40sp"
                    android:paddingRight="5sp"
                    android:paddingBottom="5sp"
                    android:textColor="@color/secondary_text"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="220sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/md_txt_message"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:paddingTop="10sp"
                    android:paddingBottom="15sp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/md_btn_alter"
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:gravity="center"
                        android:text="@string/lblConfirm"
                        android:textColor="@color/light_text"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:textStyle="bold"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/md_btn_option"
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:layout_marginRight="5sp"
                        android:layout_weight="1"
                        android:background="@color/divider_dark"
                        android:gravity="center"
                        android:text="@string/lblConfirm"
                        android:textColor="@color/light_text"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:textStyle="bold"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/md_btn_yes"
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="@string/lblConfirm"
                        android:textColor="@color/light_text"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/md_img_logo"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5sp"
                android:src="@drawable/ic_success" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>